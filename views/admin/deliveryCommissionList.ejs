<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/header'); %>
  <title>Delivery Commission List</title>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>

  <%- include('./partials/flashMessage'); %>

  <!-- <div class="container mt-5"> -->
    <div class="mt-5">

      <div class="container">
        <h1 class="mb-4">Delivery Commission List</h1>

        <!-- Search form -->
        <form action="/admin/deliveryCommissionList" method="get" class="mb-3">
          <div class="input-group">
            <label for="search" class="visually-hidden">Search:</label>
            <input type="text" id="search" name="search" class="form-control" placeholder="Search..." value="<%= searchQuery || '' %>">
            
            <label for="searchField" class="visually-hidden">Search By:</label>
            <select id="searchField" name="searchField" class="form-select">
              <option value="_id" <%= searchField === '_id' ? 'selected' : '' %>>User ID / User Name</option>
              <option value="role" <%= searchField === 'role' ? 'selected' : '' %>>Role</option>
            </select>
            
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>

      </div>

      <!-- Table to display logistics orders -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead>
            <tr>
                <th>No.</th>
                <th>User ID</th>
                <th>User Role</th>
                <th>Username</th>
                <th>Total Not Claimed Commission Quantity</th>
                <th>Total Not Claimed Commission Amount</th>
                <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% userCommissionData.forEach((userData, index) => { %>
                <tr>
                    <td><%= (page - 1) * perPage + index + 1 %></td>
                    <td><%= userData.user_id %></td>
                    <td><%= userData.userRole %></td>
                    <td><%= userData.username %></td>
                    <td><%= userData.totalNotClaimedCommissionProductQty %></td>
                    <td>$ <%= userData.totalNotClaimedCommissionAmount.toFixed(2) %></td>
                    <td>
                      <a href="/admin/editUserDeliveryCommissionList/edit/<%= userData.user_id %>" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="container">
        <!-- Pagination links -->
        <div class="d-flex justify-content-between mt-3">
          <% if (pagination.prev) { %>
            <a href="<%= pagination.prev %>" class="btn btn-primary">Previous</a>
          <% } %>
  
          <span>Page <%= pagination.current %> of <%= pagination.totalPages %></span>
  
          <% if (pagination.next) { %>
            <a href="<%= pagination.next %>" class="btn btn-primary">Next</a>
          <% } %>
        </div>
      </div>
  </div>

<footer>
  <%- include('./partials/footer'); %>
</footer>

</body>
</html>