<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/header'); %>
  <title>Logistics Orders</title>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>

  <%- include('./partials/flashMessage'); %>

  <!-- <div class="container mt-5"> -->
    <div class="mt-5">

      <div class="container">
        <h1 class="mb-4">Logistics Order List</h1>

        <!-- Search form -->
        <form action="/admin/logisticsOrderList" method="get" class="mb-3">
          <div class="input-group">
            <label for="search" class="visually-hidden">Search:</label>
            <input type="text" id="search" name="search" class="form-control" placeholder="Search...">
            
            <label for="searchField" class="visually-hidden">Search By:</label>
            <select id="searchField" name="searchField" class="form-select">
              <option value="_id">Logistics Order ID</option>
              <option value="createdByUser">Created By User(ID)</option>
              <option value="status">Status</option>
              <option value="description">Description</option>
              <option value="address.address1">Address Line 1</option>
              <option value="address.address2">Address Line 2</option>
              <option value="address.city">City</option>
              <option value="address.postalCode">Postal Code</option>
              <option value="address.country">Country</option>
              <option value="paymentStatus">Payment Status</option>
              <option value="paymentAmount">Payment Amount</option>
              <option value="deliveryType">Delivery Type</option>
              <option value="createdAt">Created At</option>
              <option value="updatedAt">Updated At</option>
            </select>
            
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>

      </div>

      <!-- Table to display logistics orders -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead>
            <tr>
              <th>NO.</th>
              <th>Logistics Order ID</th>
              <th>Created By User(ID)</th>
              <th>Status</th>
              <th>Description</th>
              <th>Address Line 1</th>
              <th>Address Line 2</th>
              <th>City</th>
              <th>Postal Code</th>
              <th>Country</th>
              <th>Payment Status</th>
              <th>Payment Amount</th>
              <th>Delivery Type</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% logisticsOrders.forEach((logisticsOrder, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= logisticsOrder._id %></td>
                <td><%= logisticsOrder.createdByUser %></td>
                <td><%= logisticsOrder.status %></td>
                <td><%= logisticsOrder.description %></td>
                <td><%= logisticsOrder.address.address1 %></td>
                <td><%= logisticsOrder.address.address2 %></td>
                <td><%= logisticsOrder.address.city %></td>
                <td><%= logisticsOrder.address.postalCode %></td>
                <td><%= logisticsOrder.address.country %></td>
                <td><%= logisticsOrder.paymentStatus %></td>
                <td><%= logisticsOrder.paymentAmount %></td>
                <td><%= logisticsOrder.deliveryType %></td>
                <td><%= logisticsOrder.createdAt %></td>
                <td><%= logisticsOrder.updatedAt %></td>
                <td>
                  <a href="/admin/logisticsOrderList/edit/<%= logisticsOrder._id %>" class="btn btn-primary btn-sm">Edit</a>
                  <!-- <a href="/admin/logisticsOrderList/delete/<%= logisticsOrder._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this logistics order?')">Delete</a> -->
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      
      <div class="container">
        <!-- Pagination links -->
        <div class="d-flex justify-content-between mt-3">
          <% if (pagination.prev) { %>
            <a href="<%= pagination.prev %>" class="btn btn-primary">Previous</a>
          <% } %>
  
          <span>Page <%= pagination.current %> of <%= pagination.totalPages %></span>
  
          <% if (pagination.next) { %>
            <a href="<%= pagination.next %>" class="btn btn-primary">Next</a>
          <% } %>
        </div>
      </div>

    <!-- </div> -->
  </div>

<footer>
  <%- include('./partials/footer'); %>
</footer>

</body>
</html>