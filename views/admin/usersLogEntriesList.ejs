<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/header'); %>
  <title>Users Log Entries List</title>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>

  <%- include('./partials/flashMessage'); %>

  <!-- <div class="container mt-5"> -->
    <div class="mt-5">

      <div class="container">
        <h1 class="mb-4">Users Log Entries List</h1>

        <!-- Search form -->
        <form action="/admin/usersLogEntriesList" method="get" class="mb-3">
          <div class="input-group">
            <label for="search" class="visually-hidden">Search:</label>
            <input type="text" id="search" name="search" class="form-control" placeholder="Search..." value="<%= searchQuery || '' %>">
            
            <label for="searchField" class="visually-hidden">Search By:</label>
            <select id="searchField" name="searchField" class="form-select">
              <option value="_id" <%= searchField === '_id' ? 'selected' : '' %>>Log Entries ID</option>
              <option value="user" <%= searchField === 'user' ? 'selected' : '' %>>User(ID)</option>
              <option value="method" <%= searchField === 'method' ? 'selected' : '' %>>Method</option>
              <option value="url" <%= searchField === 'url' ? 'selected' : '' %>>URL</option>
              <option value="action" <%= searchField === 'action' ? 'selected' : '' %>>Action</option>
              <option value="updatedData" <%= searchField === 'updatedData' ? 'selected' : '' %>>Updated Data</option>
              <option value="createdAt" <%= searchField === 'createdAt' ? 'selected' : '' %>>Created At</option>
              <option value="updatedAt" <%= searchField === 'updatedAt' ? 'selected' : '' %>>Updated At</option>
            </select>
            
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>

      </div>

      <!-- Table to display logistics orders -->
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead>
            <tr>
              <th>NO.</th>
              <th>Log Entries ID</th>
              <th>User(ID)</th>
              <th>Username</th>
              <th>Method</th>
              <th>URL</th>
              <th>Action</th>
              <!-- <th>Updated Fields</th> -->
              <th>Updated Data</th>
              <th>Created At</th>
              <th>Updated At</th>
            </tr>
          </thead>
          <tbody>
            <% targetLogEntriesList.forEach((LogEntries, index) => { %>
              <tr>
                <td><%= (page - 1) * perPage + index + 1 %></td>
                <td><%= LogEntries._id %></td>
                <td><%= LogEntries.user._id %></td>
                <td><%= LogEntries.user.username %></td>
                <td><%= LogEntries.method %></td>
                <td><%= LogEntries.url %></td>
                <td><%= LogEntries.action %></td>
                <!-- <td><%= LogEntries.updatedFields %></td> -->
                <td>
                    <% Object.keys(LogEntries.updatedData).forEach((key) => { %>
                      <%= key %>:<br><%= LogEntries.updatedData[key] %><hr>
                    <% }); %>
                </td>
                <td><%= LogEntries.createdAt %></td>
                <td><%= LogEntries.updatedAt %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      
      <div class="container">
        <!-- Pagination links -->
        <div class="d-flex justify-content-between mt-3">
          <% if (pagination.prev) { %>
            <a href="<%= pagination.prev %>" class="btn btn-primary">Previous</a>
          <% } %>
  
          <span>Page <%= pagination.current %> of <%= pagination.totalPages %></span>
  
          <% if (pagination.next) { %>
            <a href="<%= pagination.next %>" class="btn btn-primary">Next</a>
          <% } %>
        </div>
      </div>

    <!-- </div> -->
  </div>

<footer>
  <%- include('./partials/footer'); %>
</footer>

</body>
</html>