<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/header'); %>
  <title><%= editTargetUsername.username %> Quantity Based Commission List</title>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>

  <%- include('./partials/flashMessage'); %>

  <!-- <div class="container mt-5"> -->
    <div class="mt-5">

      <div class="container">
        <h1 class="mb-4"><%= editTargetUsername.username %> Quantity Based Commission List</h1>

        <!-- Search form -->
        <form action="/admin/editUserQuantityBasedCommissionList/<%= editTargetUser %>" method="get" class="mb-3">
          <div class="input-group">
            <label for="search" class="visually-hidden">Search:</label>
            <input type="text" id="search" name="search" class="form-control" placeholder="Search..." value="<%= searchQuery || '' %>">
            
            <label for="searchField" class="visually-hidden">Search By:</label>
            <select id="searchField" name="searchField" class="form-select">
              <option value="_id" <%= searchField === '_id' ? 'selected' : '' %>>Quantity-Based CommissionList ID</option>
              <option value="commissionStatus" <%= searchField === 'commissionStatus' ? 'selected' : '' %>>Commission Status</option>
              <option value="commissionAmount" <%= searchField === 'commissionAmount' ? 'selected' : '' %>>Commission Amount</option>
              <option value="remark" <%= searchField === 'remark' ? 'selected' : '' %>>Remark</option>
              <option value="createdAt" <%= searchField === 'createdAt' ? 'selected' : '' %>>Created At</option>
              <option value="updatedAt" <%= searchField === 'updatedAt' ? 'selected' : '' %>>Updated At</option>
            </select>
            
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>

      </div>

      <!-- Table to display logistics orders -->
      <div class="table-responsive">
        <form action="/admin/editUserQuantityBasedCommissionStatusList" method="POST">
          <table class="table table-striped table-bordered align-middle">
            <thead>
              <tr>
                <th>No.</th>
                <th>Quantity-Based Commission ID</th>
                <th>Logistic Order ID</th>
                <th>Status</th>
                <th>Quantity</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <% targetCommission.forEach((commission, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= commission._id %></td>
                  <td><%= commission.logisticsOrder_id._id %></td>
                  <td class="text-center">
                    <select class="form-select" name="commissionStatus">
                      <option value="Not Claimed" <%= commission.commissionStatus === 'Not Claimed' ? 'selected' : '' %>>Not Claimed</option>
                      <option value="Claimed" <%= commission.commissionStatus === 'Claimed' ? 'selected' : '' %>>Claimed</option>
                      <option value="Sample" <%= commission.commissionStatus === 'Sample' ? 'selected' : '' %>>Sample</option>
                    </select>
                  </td>
                  <td><%= commission.logisticsOrder_id.productQty %></td>
                  <td>$ <%= commission.commissionAmount.toFixed(2) %></td>
                  <!-- Add a hidden input for commission ID -->
                  <input type="hidden" name="commissionId" value="<%= commission._id %>">
                </tr>
              <% }); %>
              <% if (targetCommission.length > 0) { %>
                <tr>
                  <td colspan="3" class="text-center">
                    Total
                  </td>
                  <td class="text-center">
                    <button class="btn btn-primary btn-sm" type="submit">Update Selected Status</button>
                  </td>
                  <td class="fw-bold text-end"><%= totalNotClaimedCommissionQty %></td>
                  <td class="fw-bold text-end">$<%= totalNotClaimedCommissionAmount.toFixed(2) %></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </form>
        
        
      </div>

      <div class="container">
        <!-- Pagination links -->
        <div class="d-flex justify-content-between mt-3">
          <% if (pagination.prev) { %>
            <a href="<%= pagination.prev %>" class="btn btn-primary">Previous</a>
          <% } %>
  
          <span>Page <%= pagination.current %> of <%= pagination.totalPages %></span>
  
          <% if (pagination.next) { %>
            <a href="<%= pagination.next %>" class="btn btn-primary">Next</a>
          <% } %>
        </div>
      </div>
  </div>

<footer>
  <%- include('./partials/footer'); %>
</footer>

</body>
</html>


