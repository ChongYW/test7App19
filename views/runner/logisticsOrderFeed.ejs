<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('./partials/header'); %>
  <title>Logistics Orders Feed</title>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>

  <%- include('./partials/flashMessage'); %>

  <div class="container mt-5">
    <h1 class="mb-4">Logistics Orders Feed</h1>

    <!-- Search form -->
    <form action="/runner/logisticsOrderFeed" method="get" class="mb-3">
        <div class="input-group">
          <label for="search" class="visually-hidden">Search:</label>
          <input type="text" id="search" name="search" class="form-control" placeholder="Search..." value="<%= searchQuery || '' %>">
          
          <label for="searchStatusField" class="visually-hidden">Status:</label>
          <select id="searchStatusField" name="searchStatusField" class="form-select">
              <option value="Draft Order" <%= searchStatusField === 'Draft Order' ? 'selected' : '' %>>Draft Order</option>
              <option value="Order Posted to Feed" <%= searchStatusField === 'Order Posted to Feed' ? 'selected' : '' %>>Order Posted to Feed</option>
              <option value="Added to Delivery List" <%= searchStatusField === 'Added to Delivery List' ? 'selected' : '' %>>Added to Delivery List</option>
              <option value="Delivery in Progress" <%= searchStatusField === 'Delivery in Progress' ? 'selected' : '' %>>Delivery in Progress</option>
              <option value="Delivered Successfully" <%= searchStatusField === 'Delivered Successfully' ? 'selected' : '' %>>Delivered Successfully</option>
              <option value="Returning" <%= searchStatusField === 'Returning' ? 'selected' : '' %>>Returning</option>
              <option value="Returned" <%= searchStatusField === 'Returned' ? 'selected' : '' %>>Returned</option>
              <option value="Delivery Attempted" <%= searchStatusField === 'Delivery Attempted' ? 'selected' : '' %>>Delivery Attempted</option>
              <option value="Cancel Delivery" <%= searchStatusField === 'Cancel Delivery' ? 'selected' : '' %>>Cancel Delivery</option>
          </select>
      
          <label for="searchField" class="visually-hidden">Search By:</label>
          <select id="searchField" name="searchField" class="form-select">
              <option value="_id" <%= searchField === '_id' ? 'selected' : '' %>>Logistics Order ID</option>
              <option value="createdByUser" <%= searchField === 'createdByUser' ? 'selected' : '' %>>Created By User(ID or Username)</option>
              <option value="status" <%= searchField === 'status' ? 'selected' : '' %>>Status</option>
              <option value="description" <%= searchField === 'description' ? 'selected' : '' %>>Description</option>
              <option value="customerType" <%= searchField === 'customerType' ? 'selected' : '' %>>Customer Type</option>
              <option value="customerName" <%= searchField === 'customerName' ? 'selected' : '' %>>Customer Name</option>
              <option value="customerContact" <%= searchField === 'customerContact' ? 'selected' : '' %>>Customer Contact</option>
              <option value="address.address1" <%= searchField === 'address.address1' ? 'selected' : '' %>>Address Line 1</option>
              <option value="address.address2" <%= searchField === 'address.address2' ? 'selected' : '' %>>Address Line 2</option>
              <option value="address.city" <%= searchField === 'address.city' ? 'selected' : '' %>>City</option>
              <option value="address.postalCode" <%= searchField === 'address.postalCode' ? 'selected' : '' %>>Postal Code</option>
              <option value="address.country" <%= searchField === 'address.country' ? 'selected' : '' %>>Country</option>
              <option value="paymentStatus" <%= searchField === 'paymentStatus' ? 'selected' : '' %>>Payment Status</option>
              <option value="paymentType" <%= searchField === 'paymentType' ? 'selected' : '' %>>Payment Type</option>
              <option value="paymentAmount" <%= searchField === 'paymentAmount' ? 'selected' : '' %>>Payment Amount</option>
              <option value="deliveryType" <%= searchField === 'deliveryType' ? 'selected' : '' %>>Delivery Type</option>
              <option value="remark" <%= searchField === 'remark' ? 'selected' : '' %>>Remark</option>
              <option value="createdAt" <%= searchField === 'createdAt' ? 'selected' : '' %>>Created At</option>
              <option value="updatedAt" <%= searchField === 'updatedAt' ? 'selected' : '' %>>Updated At</option>
          </select>
          
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- News feed grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% logisticsOrders.forEach((logisticsOrder, index) => { %>
            <div class="col">
              <a href="/runner/logisticsOrderFeed/logisticsOrderDetails/<%= logisticsOrder._id %>" class="text-decoration-none text-muted">
                <div class="card border-2">
                    <div class="card-body">
                      <h5 class="card-title"><strong>Logistics Order <%= (page - 1) * perPage + index + 1 %></strong></h5>
                      <hr>
                      <p class="card-text"><strong>Order ID: </strong><br><%= logisticsOrder._id %></p>
                      <p class="card-text"><strong>Created By User: </strong><br><%= logisticsOrder.createdByUser.username %></p>
                      <p class="card-text"><strong>Created By User(ID): </strong><br><%= logisticsOrder.createdByUser._id %></p>
                      <p class="card-text"><strong>Status: </strong><br><%= logisticsOrder.status %></p>
                      <p class="card-text"><strong>Description: </strong><br><%= logisticsOrder.description %></p>
                      <p class="card-text"><strong>Customer Type: </strong><br><%= logisticsOrder.customerType %></p>
                      <p class="card-text"><strong>Customer Name: </strong><br><%= logisticsOrder.customerName %></p>
                      <p class="card-text"><strong>Customer Contact: </strong><br><%= logisticsOrder.customerContact %></p>
                      <p class="card-text">
                        <strong>Address:</strong><br>
                        <%= logisticsOrder.address.address1 %><br>
                        <%= logisticsOrder.address.address2 %><br>
                        <%= logisticsOrder.address.city %><br>
                        <%= logisticsOrder.address.postalCode %><br>
                        <%= logisticsOrder.address.country %>
                      </p>
                      <p class="card-text"><strong>Payment Status: </strong><br><%= logisticsOrder.paymentStatus %></p>
                      <p class="card-text"><strong>Payment Type: </strong><br><%= logisticsOrder.paymentType %></p>
                      <p class="card-text"><strong>Payment Amount: </strong><br><%= logisticsOrder.paymentAmount %></p>
                      <p class="card-text"><strong>Delivery Type: </strong><br><%= logisticsOrder.deliveryType %></p>
                      <p class="card-text"><strong>Remark: </strong><br><%= logisticsOrder.remark %></p>
                      <div class="mt-3">
                        <span class="text-muted"><strong>Created At: </strong><br><%= logisticsOrder.createdAt %></span>
                      </div>
                      
                      <hr>
                        <div class="btn btn-secondary d-flex justify-content-center text-center">
                            Details
                        </div>
                    </div>
                </div>
              </a>
            </div>
        <% }); %>
      </div>

    <!-- Pagination links -->
    <div class="d-flex justify-content-between mt-3">
      <% if (pagination.prev) { %>
        <a href="<%= pagination.prev %>" class="btn btn-primary">Previous</a>
      <% } %>

      <span>Page <%= pagination.current %> of <%= pagination.totalPages %></span>

      <% if (pagination.next) { %>
        <a href="<%= pagination.next %>" class="btn btn-primary">Next</a>
      <% } %>
    </div>
  </div>

  <footer>
    <%- include('./partials/footer'); %>
  </footer>
</body>
</html>
